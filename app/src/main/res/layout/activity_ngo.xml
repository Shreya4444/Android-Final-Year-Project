<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.technotalkative.beproject.NGO.Ngo"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/charii">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What do you want to do in NGO?"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="#ECF0F1"
            />
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ngo1"
                android:text="Provide Help"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:padding="20dp"
                android:layout_marginLeft="40dp"
                android:textColor="#ECF0F1"></RadioButton>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ngo2"
                android:text="Seek Help"
                style="@style/Base.TextAppearance.AppCompat.Large"
                android:padding="20dp"
                android:layout_marginLeft="40dp"
                android:textColor="#ECF0F1"></RadioButton>

        </RadioGroup>

    </LinearLayout>

